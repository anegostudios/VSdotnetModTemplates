{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "uninstall",
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet new uninstall VintageStory.Mod.Templates"
		},
		{
			"type": "shell",
			"label": "install",
			"dependsOn":["uninstall","pack"],
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet new install ./bin/Debug/VintageStory.Mod.Templates.1.0.1.nupkg"
		},
		{
			"type": "shell",
			"label": "pack",
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"options": {
				"cwd": "${workspaceFolder}/VSModTemplates"
			},
			"command": "dotnet pack -c Release"
		}
	]
}